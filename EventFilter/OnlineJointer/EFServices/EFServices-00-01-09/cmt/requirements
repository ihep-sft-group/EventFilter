macro_append cppflags " -Wno-deprecated -DDEBUG_LEVEL=0 "

macro GaudiSvc_libraries "$(GaudiSvcDir)/libGaudiSvc.$(shlibsuffix)" \
      UnixStatic         "$(GaudiSvcDir)/libGaudiSvc.a"

library   EFServices   *.cxx -s=components *.cxx
apply_pattern component_library 

#=================== Private options ======================
